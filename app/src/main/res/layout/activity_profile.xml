<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#010127">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp">



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="255dp"
                        android:background="@drawable/bg_profile"
                        android:layout_gravity="center_horizontal"
                        />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:rowCount="2"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:useDefaultMargins="true"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false">

                        <ImageView
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:background="@drawable/icon_profile"
                            android:layout_rowWeight="1"
                            android:layout_gravity="start"

                            />

                        <LinearLayout
                            android:layout_width="207dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="2"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsbold"
                                android:gravity="center"
                                android:text="Nama Pengguna"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:shadowColor="#440CA0"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="15"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="19dp"
                                android:backgroundTint="#440CA0"
                                app:cardCornerRadius="35dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:gravity="center"
                                    android:text="Email Pengguna"
                                    android:textColor="@color/white"
                                    android:textSize="9sp"


                                    android:textStyle="italic" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </GridLayout>

                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_marginHorizontal="60dp"

                    app:cardBackgroundColor="#290760"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_gravity="bottom" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:layout_marginHorizontal="50dp"

                    app:cardBackgroundColor="#9E64D7"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_gravity="bottom" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:elevation="1dp"
                    android:layout_marginHorizontal="40dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:background="@drawable/card"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:paddingStart="2dp"
                        android:layout_marginTop="15dp"
                        >


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/dt_coin"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="99999"
                                android:paddingTop="5dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppinssemibold"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"

                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:text="Account Balance"
                            android:textColor="@color/white"


                            android:textSize="13dp"
                            android:fontFamily="@font/poppinssemibold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:orientation="horizontal"
                            >

                            <EditText
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:height="30dp"

                                android:background="@drawable/inputtopup"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center_vertical"
                                android:hint="Set Amount"
                                android:paddingHorizontal="5dp"
                                android:textSize="13sp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageButton
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:height="30dp"
                                    android:background="@drawable/topupbtn"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Top Up"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppinsbold"
                                    android:textSize="13dp"/>

                            </FrameLayout>


                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Transactions"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transactionrecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"/>





        </LinearLayout>
    </ScrollView>

</RelativeLayout>