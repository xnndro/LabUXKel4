<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_profile"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/imageTransaction"
            android:layout_width="66dp"
            android:layout_height="66dp"
            />
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_light"
        android:layout_marginHorizontal="12dp"
        >

        <TextView
            android:id="@+id/gameNameItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Name - Item Price"
            android:textSize="13sp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"
            android:layout_marginBottom="5sp"/>

        <TextView
            android:id="@+id/itemNameQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name - Qty pc(s)"
            android:textSize="10sp"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="italic"
            android:textColor="#E8797979"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        >

        <TextView
            android:id="@+id/totalGame"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinsbold"
            android:text="-250000"
            android:textAlignment="textEnd"
            android:gravity="left"
            android:textColor="#FD0000"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:src="@drawable/dt_coin"/>



    </LinearLayout>




</LinearLayout>